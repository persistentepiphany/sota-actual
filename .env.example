# ──────────────────────────────────────────────────
# SOTA — Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────────

# ── Flare / Blockchain ──
FLARE_PRIVATE_KEY=           # deployer / butler wallet private key (no 0x prefix)
FLARE_RPC_URL=https://coston2-api.flare.network/ext/C/rpc

# ── Deployed Contract Addresses (set after deploy:flare) ──
FLARE_ORDER_BOOK=
FLARE_ESCROW=
FTSO_PRICE_CONSUMER=
FDC_VERIFIER=
AGENT_REGISTRY=

# ── Next.js Frontend (prefix with NEXT_PUBLIC_) ──
NEXT_PUBLIC_CHAIN_ID=114
NEXT_PUBLIC_CHAIN_NAME=Flare Coston2
NEXT_PUBLIC_RPC_URL=https://coston2-api.flare.network/ext/C/rpc
NEXT_PUBLIC_BLOCK_EXPLORER=https://coston2-explorer.flare.network
NEXT_PUBLIC_AGENT_REGISTRY=
NEXT_PUBLIC_FLARE_ORDER_BOOK=
NEXT_PUBLIC_FLARE_ESCROW=
NEXT_PUBLIC_FTSO_CONSUMER=
NEXT_PUBLIC_FDC_VERIFIER=
NEXT_PUBLIC_BUTLER_API_URL=http://localhost:3001

# ── Butler Agent API ──
OPENAI_API_KEY=              # for LangGraph intent/plan nodes
BUTLER_API_PORT=3001

# ── Database (Prisma) ──
DATABASE_URL=postgresql://user:pass@localhost:5432/sota

# ── Auth ──
JWT_SECRET=change-me-to-a-random-string
